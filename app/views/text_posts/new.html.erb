<%= form_for(@text_post) do |f| %>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <% form_tag %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
